.page-header
  %h1=t('sign_in')

=simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "well form-horizontal"}) do |f|
  .inputs

    =f.input :email, :required => true, :autofocus => true
    =f.input :password, :required => true, hint: (link_to t('simple_form.forgot_your_password'), new_password_path(resource_name))
    
    =f.input :remember_me, :as => :boolean if devise_mapping.rememberable?

  .form-actions
    =f.button :submit, t('sign_in'), class: "btn btn-primary btn-large"
    =t('or')
    = link_to t('sign_up'), new_registration_path(resource_name) 
