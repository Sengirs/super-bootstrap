.page-header
  %h1=t('simple_form.change_your_password')


= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), html: {class: "form-horizontal", :method => "put"}) do |f|
  
  = f.error_notification
  = f.input :reset_password_token, :as => :hidden
  = f.full_error :reset_password_token
  
  .inputs
    = f.input :password, :required => true
    = f.input :password_confirmation, :required => true
    
  .form-actions
    =f.button :submit, t("simple_form.change_my_password"), class: "btn btn-primary"
