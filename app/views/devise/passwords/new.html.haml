.page-header
  %h1=t('simple_form.forgot_your_password')

=simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), html: {class: "well form-horizontal", :method => :post}) do |f|
  .inputs
    =f.input :email, :required => false, :autofocus => true
    
  .form-actions
    =f.button :submit, t('simple_form.send_reset_password'), class: "btn btn-primary"